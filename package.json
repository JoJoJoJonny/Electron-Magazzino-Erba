{
  "name": "magazzino-erba",
  "private": true,
  "version": "1.1.0",

  "productName": "Magazzino Erba",
  "description": "Applicazione per la gestione del magazzino",
  "author": {
    "email": "mattiabonetti2003@gmail.com",
    "name": "Mattia Bonetti",
    "url": "https://github.com/JoJoJoJonny"
  },

  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "build:desktop": "node scripts/build-desktop.js",
    "start:web": "vite preview",
    "start:desktop": "electron dist-electron/main.js",
    "lint": "bunx @biomejs/biome check --write src",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "build": "tsc && vite build",
    "package:desktop": "npm run build && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "better-sqlite3": "^12.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "happy-dom": "^15.11.7",
    "lucide-react": "^0.441.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.66.1",
    "react-router-dom": "^7.9.6",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.18.12",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-istanbul": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.9"
  },
  "main": "dist-electron/main.js",


  "build": {
    "directories": {
      "output": "release"
    },

    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },

    "appId": "com.erba.magazzino",
    "icon": "icon",

    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "myIcon.ico",
      "publisherName": "Erba Angelo"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Utility"
    }
  }
}
